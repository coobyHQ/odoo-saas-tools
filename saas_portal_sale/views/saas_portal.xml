<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- client instance -->
    <record id="view_clients_form" model="ir.ui.view">
        <field name="name">saas_portal.client.form</field>
        <field name="model">saas_portal.client</field>
        <field name="inherit_id" ref="saas_portal.view_clients_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <br></br><label for="contract_id"/> <field name="contract_id"/>
            </xpath>
            <xpath expr="//field[@name='plan_max_users']" position="after">
                <field name="topup_users"/>
            </xpath>
            <xpath expr="//field[@name='plan_max_storage']" position="after">
                <field name="topup_storage_limit"/>
            </xpath>

            <!-- Adding new page
            Todo this is still experimental -->

            <xpath expr="//page[@name='notes']" position="before">
                <page string="Product and Topups" name="topups">
                    <separator string="Topups"/>
                    <field name="topup_ids">
                        <tree>
                            <field name="qty_delivered"/>
                            <field name="name"/>
                            <field name="topup_users"/>
                            <field name="topup_storage"/>
                            <field name="plan_id"/>
                            <field name="client_id"/>
                        </tree>
                        <form>
                            <group colspan="4" col="4">
                                <field name="name" colspan="4"/>
                                <field name="qty_delivered"/>
                                <field name="plan_id"/>
                                <field name="topup_users" colspan="2"/>
                                <field name="topup_storage" colspan="2"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>

        </field>
    </record>




    <!-- plans -->
    <record id="view_sale_plans_form" model="ir.ui.view">
        <field name="name">saas_portal_sale.plans.form</field>
        <field name="model">saas_portal.plan</field>
        <field name="inherit_id" ref="saas_portal.view_plans_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='maximum_allowed_trial_dbs_per_partner']" position="after">
                  <field name="free_subdomains"/>
                  <field name="non_trial_instances"/>
                </xpath>
                <!-- Adding new page -->
                <xpath expr="//page[@name='website']" position="before">
                    <page string="Product and Topups" name="topups">
                        <group string="Product Template" name="template">
                            <field name="product_tmpl_id"/>
                        </group>
                        <group string="Contract Template" name="contract_template">
                            <field name="contract_template_id"/>
                        </group>
                        <separator string="Variants"/>
                        <field name="product_variant_ids"/>
                        <separator string="Topups"/>
                        <field name="topup_ids">
                            <tree>
                                <field name="name"/>
                                <field name="topup_users"/>
                                <field name="topup_storage"/>
                                <field name="product_tmpl_id"/>
                                <field name="contract_template_id"/>
                            </tree>
                            <form>
                                <group colspan="4" col="4">
                                    <field name="name" colspan="4"/>
                                    <field name="product_tmpl_id" colspan="4"
                                           context="{'default_is_saas': True, 'default_saas_product_type': 'addon'}"/>
                                    <field name="contract_template_id" colspan="4"/>
                                    <field name="topup_users" colspan="2"/>
                                    <field name="topup_storage" colspan="2"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
